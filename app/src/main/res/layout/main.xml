<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main">

    <Button
        android:id="@+id/btnExit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/xt_btn"
        android:text="Exit" />


    <ImageButton
        android:id="@+id/enbttn"
        android:layout_width="237dp"
        android:layout_height="183dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/disbttn"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_style"
        android:contentDescription="@string/enable"
        android:padding="20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/dis" />

    <ImageButton
        android:id="@+id/disbttn"
        android:layout_width="237dp"
        android:layout_height="183dp"
        android:layout_centerInParent="true"
        android:background="@drawable/button_style"
        android:contentDescription="@string/disable"
        android:padding="20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/en" />


</RelativeLayout>
